{
  "name": "pending-xhr-puppeteer",
  "node": ">= 8.0.0",
  "version": "2.1.0",
  "description": "Small tool for wait that all xhr are finished in pupeteer",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "module": "lib/es.js",
  "homepage": "https://github.com/jtassin/pending-xhr-puppeteer",
  "repository": {
    "type": "git",
    "url": "https://github.com/jtassin/pending-xhr-puppeteer.git"
  },
  "bugs": {
    "url": "https://github.com/jtassin/pending-xhr-puppeteer/issues"
  },
  "author": "Julien TASSIN",
  "license": "MIT",
  "private": false,
  "keywords": [
    "puppeteer",
    "xhr",
    "pending",
    "wait",
    "nodejs",
    "e2e"
  ],
  "devDependencies": {
    "@types/jest": "24.0.18",
    "@types/puppeteer": "1.19.1",
    "auto-changelog": "1.15.0",
    "eslint": "6.2.2",
    "eslint-config-prettier": "6.1.0",
    "eslint-plugin-jest": "22.16.0",
    "husky": "3.0.4",
    "jest": "24.9.0",
    "lint-staged": "9.2.5",
    "prettier": "1.18.2",
    "puppeteer": "1.19.0",
    "release-it": "10.3.1",
    "rollup": "1.20.3",
    "rollup-plugin-typescript": "1.0.0",
    "rollup-plugin-typescript2": "0.24.0",
    "ts-jest": "24.0.2",
    "tsc": "1.20150623.0",
    "tslib": "1.10.0",
    "typescript": "3.6.2"
  },
  "scripts": {
    "prettier:write": "prettier --single-quote --trailing-comma es5 --write src/**/*",
    "lint": "eslint src",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "precommit": "lint-staged",
    "build": "rollup -c"
  },
  "release-it": {
    "scripts": {
      "afterBump": "npm run build",
      "changelog": "npx auto-changelog --stdout --commit-limit false -u",
      "beforeStage": "npx auto-changelog"
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
